    "module": "ESNext",
    "target": "ESNext",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib"]
}
